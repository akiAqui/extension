{
  "manifest_version": 3,
  "name": "My Focus Controller",
  "version": "1.2",
  "description": "Keyboard shortcut to focus specific input",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.chatgpt.com/*",
    "https://*.claude.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.chatgpt.com/*", "https://*.claude.ai/*"],
      "js": ["content.js"]
    }
  ]
}
